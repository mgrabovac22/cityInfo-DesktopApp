<UserControl x:Class="Varaždinski_Gradski_Info.ClinicsOnDuty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="White" Margin="10">
        <StackPanel>
            <TextBlock Text="Dežurne ljekarne" FontSize="20" FontWeight="Bold" Margin="10" />

            <Grid Margin="10" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Ljekarna Varaždin Centar" FontSize="16" FontWeight="Bold" />
                        <TextBlock Text="Adresa: Ulica Ivana Kukuljevića 15, Varaždin" />
                        <TextBlock Text="Radno vrijeme: 00:00 - 24:00 (dežurna)" />
                        <TextBlock Text="Kontakt: +385 42 555 123" />
                        <TextBlock Text="Napomena: Smještena u blizini centra grada, osigurava lijekove i medicinske savjete cijeli dan." TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="5" Grid.Column="1">
                    <StackPanel>
                        <TextBlock Text="Ljekarna Banfica" FontSize="16" FontWeight="Bold" />
                        <TextBlock Text="Adresa: Trg Slobode 8, Varaždin" />
                        <TextBlock Text="Radno vrijeme: 08:00 - 22:00 (dežurna vikendom)" />
                        <TextBlock Text="Kontakt: +385 42 555 456" />
                        <TextBlock Text="Napomena: Dostupna za hitne slučajeve tijekom vikenda." TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </Grid>

            <TextBlock Text="Kontakti obiteljskih liječnika" FontSize="20" FontWeight="Bold" Margin="10" />

            <Grid Margin="10" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Dr. Ivan Horvat" FontSize="16" FontWeight="Bold" />
                        <TextBlock Text="Adresa ordinacije: Zdravstveni dom Varaždin, Ulica Stjepana Radića 7" />
                        <TextBlock Text="Radno vrijeme: Ponedjeljak - Petak: 07:00 - 15:00" />
                        <TextBlock Text="Kontakt: +385 42 555 789" />
                        <TextBlock Text="Napomena: Prima pacijente s uputnicama i pruža konzultacije telefonom." TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="5" Grid.Column="1">
                    <StackPanel>
                        <TextBlock Text="Dr. Ana Kovačić" FontSize="16" FontWeight="Bold" />
                        <TextBlock Text="Adresa ordinacije: Dom zdravlja Biškupec, Ulica Kralja Tomislava 12" />
                        <TextBlock Text="Radno vrijeme: Ponedjeljak - Petak: 14:00 - 20:00" />
                        <TextBlock Text="Kontakt: +385 42 555 987" />
                        <TextBlock Text="Napomena: Dostupna za kućne posjete prema dogovoru." TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
